<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navyPrimary"
    tools:context=".activity.ForgotPassword">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_kembaliPass"
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="126dp"
            android:layout_height="63dp"
            android:layout_marginTop="75dp"
            android:src="@drawable/logoapp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/roboto_medium"
            android:text="LUPA PASSWORD"
            android:textColor="@color/whitePrimary"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/TextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/roboto_reguler"
            android:justificationMode="inter_word"
            android:text="Masukan email anda yang terdaftar pada aplikasi. Kami akan mengirimkan link reset password untuk akun anda."
            android:textColor="@color/whitePrimary"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/TextView1" />

        <EditText
            android:id="@+id/et_lupaPass"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/bg_input_active"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="30dp"
            android:padding="12dp"
            android:hint="Masukan Email"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/TextView2"/>

        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/button_secondary"
            android:fontFamily="@font/roboto_bold"
            android:text="KIRIM"
            android:textColor="@color/whitePrimary"
            android:textSize="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_lupaPass"
            app:spinning_bar_color="@color/whitePrimary"
            app:spinning_bar_width="4dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>