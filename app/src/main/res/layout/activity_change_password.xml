<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayPrimary"
    tools:context=".activity.ChangePassword">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_changePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitePrimary"
        android:padding="@dimen/dimensatu"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/btn_backChangePW"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/btn_back_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ganti Password"
            android:textSize="@dimen/font_size_16"
            android:textColor="@color/blackPrimary"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="@color/whitePrimary"
        app:layout_constraintTop_toBottomOf="@id/constraint_changePassword">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimensatu"
            android:paddingStart="@dimen/dimensatu"
            android:paddingEnd="@dimen/dimensatu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_passwordLama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_16"
                    android:digits="@string/digit_password"
                    android:hint="Masukkan Password Sekarang"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/strip3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greyStrip"
                android:layout_marginTop="@dimen/dimensatu"
                app:layout_constraintTop_toBottomOf="@id/textInputLayout"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_passwordbaru1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:hintAnimationEnabled="true"
                android:layout_marginTop="@dimen/dimensatu"
                app:layout_constraintTop_toBottomOf="@id/strip3">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_passwordBaru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_16"
                    android:inputType="textPassword"
                    android:digits="@string/digit_password"
                    android:hint="Masukkan Password Baru"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_passwordbaru2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:layout_constraintTop_toBottomOf="@id/layout_passwordbaru1">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_passwordBaru2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan Lagi Password Baru"
                    android:textSize="@dimen/font_size_16"
                    android:digits="@string/digit_password"
                    android:inputType="textPassword"
                    app:layout_constraintTop_toBottomOf="@id/et_passwordBaru"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimensatu"
                android:text="Harap memasukkan password baru"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_passwordbaru2" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aturan_ganti_password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView23" />
            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lupa password akun kedai?"
                android:layout_marginTop="@dimen/dimensatu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView24"/>
            <TextView
                android:id="@+id/tv_resetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset Password"
                android:textColor="@color/navyPrimary"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginStart="3dp"
                android:layout_marginTop="@dimen/dimensatu"
                app:layout_constraintTop_toBottomOf="@id/textView24"
                app:layout_constraintStart_toEndOf="@id/textView25"/>

            <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                android:id="@+id/btn_updatePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimendua"
                android:fontFamily="@font/roboto_medium"
                android:text="simpan"
                android:background="@drawable/button_primary"
                android:textColor="@color/whitePrimary"
                android:textSize="@dimen/font_size_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_resetPassword"
                app:spinning_bar_color="@color/whitePrimary"
                app:initialCornerAngle="50dp"
                app:finalCornerAngle="50dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>