<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navyPrimary"
    tools:context=".activity.Login">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_kembaliLog"
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="@dimen/dimensatu"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="126dp"
            android:layout_height="63dp"
            android:layout_marginTop="75dp"
            android:src="@drawable/logoapp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Silahkan Login"
            android:textColor="@color/whitePrimary"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constrainnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:paddingStart="@dimen/dimensatu"
            android:paddingEnd="@dimen/dimensatu"
            app:layout_constraintTop_toBottomOf="@id/TextView1">


            <EditText
                android:id="@+id/et_usernameLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/bg_input_active"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/et_usernameLog">

                <EditText
                    android:id="@+id/et_passwordLog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input_active"
                    android:hint="Password"
                    android:maxLength="24"
                    android:digits="@string/digit_password"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    app:layout_constraintEnd_toStartOf="@+id/btnShowPass"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </com.google.android.material.textfield.TextInputLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/btn_lupapass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="@dimen/dimensatu"
            android:fontFamily="@font/roboto_reguler"
            android:text="Lupa Password?"
            android:textColor="@color/greenPrimary"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constrainnt" />

        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/btn_loginLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="@dimen/dimensatu"
            android:layout_marginEnd="@dimen/dimensatu"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_primary"
            android:fontFamily="@font/roboto_bold"
            android:text="LOGIN"
            android:textColor="@color/whitePrimary"
            android:textSize="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_lupapass"
            app:spinning_bar_color="@color/whitePrimary"
            app:spinning_bar_width="4dp" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/btn_loginGoogleAcc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimensatu"
            android:layout_marginTop="@dimen/dimensatu"
            android:layout_marginEnd="@dimen/dimensatu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_loginLog" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>