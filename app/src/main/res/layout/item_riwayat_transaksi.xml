<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dimensatu"
    android:layout_marginBottom="@dimen/dimensatu"
    android:background="@drawable/bg_item_list_order">

    <TextView
        android:id="@+id/tv_riwayatPembelianSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pembelian"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_invoiceTOPUP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="TP01212081ASD12"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintTop_toBottomOf="@id/tv_riwayatPembelianSaldo"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_tglTopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20-10-2021"
        android:textColor="@color/black"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/tv_invoiceTOPUP"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/status_TransaksiTopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sukses"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp. 250.000"
        android:textColor="@color/pinkPrimary"
        android:textSize="@dimen/dimendua"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>