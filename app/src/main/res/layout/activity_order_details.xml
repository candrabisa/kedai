<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.OrderDetails"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimensatu"
        android:background="@drawable/bg_appbar_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_backOrderDetail"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/btn_back_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rincian Pesanan"
            android:textSize="20sp"
            android:textColor="@color/blackPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/constraint11">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimensatu"
                android:layout_marginTop="@dimen/dimensatu"
                android:background="@drawable/bg_appbar_white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:id="@+id/tv_StatusPesanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textColor="@color/fontGrey"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/tv_statusPesananOrderDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dalam Proses"
                    android:textColor="@color/blackPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_waktuPemesanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waktu Pemesanan"
                    android:textColor="@color/fontGrey"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_StatusPesanan"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tv_waktuPemesananOrderDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10-10-2020"
                    android:textColor="@color/blackPrimary"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_statusPesananOrderDetail"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INVOICE"
                    android:textColor="@color/fontGrey"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_waktuPemesanan"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tv_invOrderDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="INV12321212"
                    android:textColor="@color/blackPrimary"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_waktuPemesananOrderDetail"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimensatu"
                android:padding="@dimen/dimensatu"
                android:background="@drawable/bg_appbar_white"
                app:layout_constraintTop_toBottomOf="@id/constraint12">
                <TextView
                    android:id="@+id/tv_alamatPenerima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/fontGrey"
                    android:textSize="@dimen/font_size_16"
                    android:text="Alamat Penerima"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_namaPenerimaOrderDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Candra Billy Sagita"
                    android:textColor="@color/blackPrimary"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_alamatPenerima"/>

                <TextView
                    android:id="@+id/tv_jenisAlamatOrderDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blackPrimary"
                    android:text="Alamat Rumah"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_namaPenerimaOrderDetail"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tv_alamatLengkapOrderDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perumahan Mutiara Asri Bekasi Selatan No 1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_jenisAlamatOrderDetail"/>

                <TextView
                    android:id="@+id/tv_kelurahanOrderDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sukaresmi"
                    app:layout_constraintTop_toBottomOf="@id/tv_alamatLengkapOrderDetail"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tv_kecamatanOrderDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cikarang Selatan"
                    app:layout_constraintTop_toBottomOf="@id/tv_alamatLengkapOrderDetail"
                    app:layout_constraintStart_toEndOf="@id/tv_kelurahanOrderDetail"/>

                <TextView
                    android:id="@+id/tv_kabKotaOrderDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kab Bekasi"
                    app:layout_constraintTop_toBottomOf="@id/tv_kelurahanOrderDetail"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tv_provinsiOrderDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jawa Barat"
                    app:layout_constraintTop_toBottomOf="@id/tv_kecamatanOrderDetail"
                    app:layout_constraintStart_toEndOf="@id/tv_kabKotaOrderDetail"/>

                <TextView
                    android:id="@+id/tv_noHPOrderDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="0812345678"
                    app:layout_constraintTop_toBottomOf="@id/tv_kabKotaOrderDetail"
                    app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimensatu"
                android:padding="@dimen/dimensatu"
                android:background="@drawable/bg_appbar_white"
                app:layout_constraintTop_toBottomOf="@id/constraint13">

                <TextView
                    android:id="@+id/tv_DetailPesananOrderDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail Pesanan"
                    android:textColor="@color/fontGrey"
                    android:textSize="@dimen/font_size_16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimensatu"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_DetailPesananOrderDetail">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/c4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="@dimen/card_radius"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/iv_detailPesananOrderDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/esteh" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tv_namaProdukOrderDetail"
                        android:layout_width="126dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Es Teh Manis sangat enak"
                        android:textColor="@color/blackPrimary"
                        android:textSize="@dimen/font_size_16"
                        app:layout_constraintStart_toEndOf="@+id/c4"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_qtyOrderDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="1x"
                        android:textColor="@color/blackPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/c4" />

                    <TextView
                        android:id="@+id/tv_hargaProdukOrderDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Rp. 24.000"
                        android:textColor="@color/pinkPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/view22"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dimensatu"
                    android:background="@color/greyStrip"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/constraint15"/>

                <TextView
                    android:id="@+id/tv_totalBelanja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimensatu"
                    android:text="Total Belanja"
                    android:textColor="@color/blackPrimary"
                    app:layout_constraintTop_toBottomOf="@id/view22"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tv_totalBelanjaOrderDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimensatu"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Rp. 48.000"
                    android:textColor="@color/blackPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view22" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Ongkos Kirim"
                    android:textColor="@color/blackPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_totalBelanja" />

                <TextView
                    android:id="@+id/tv_ongkirOrderDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Rp. 10.000"
                    android:textColor="@color/blackPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_totalBelanjaOrderDetail" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Potongan Voucher"
                    android:textColor="@color/blackPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView14" />

                <TextView
                    android:id="@+id/tv_potVoucherOrderDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="-"
                    android:textColor="@color/blackPrimary"
                    android:textSize="@dimen/font_size_16"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ongkirOrderDetail" />

                <View
                    android:id="@+id/view23"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/greyStrip"
                    android:layout_marginTop="@dimen/dimensatu"
                    app:layout_constraintTop_toBottomOf="@+id/tv_potVoucherOrderDetail" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimensatu"
                    android:text="Total Pembayaran"
                    android:textColor="@color/blackPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view23" />

                <TextView
                    android:id="@+id/tv_totalPembayaranOrderDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimensatu"
                    android:text="Rp. 58.000"
                    android:textColor="@color/orangePrimary"
                    android:fontFamily="@font/roboto_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view23" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Status Pembayaran"
                    android:textColor="@color/blackPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView15" />

                <TextView
                    android:id="@+id/tv_statusPembayaranOrderDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Dibayar"
                    android:textColor="@color/navyPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_totalPembayaranOrderDetail" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Metode Pembayaran"
                    android:textColor="@color/blackPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView16" />

                <TextView
                    android:id="@+id/tv_metodePembayaranOrderDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Saldo Kedai"
                    android:textColor="@color/pinkPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_statusPembayaranOrderDetail"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btn_komplainOrder"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimensatu"
                android:layout_marginStart="@dimen/dimensatu"
                android:text="KOMPLAIN"
                android:textColor="@color/whitePrimary"
                android:background="@drawable/button_primary"
                android:backgroundTint="@color/grayPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraint14" />
            <Button
                android:id="@+id/btn_selesaiOrder"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimendua"
                android:layout_marginTop="@dimen/dimensatu"
                android:layout_marginEnd="@dimen/dimensatu"
                android:background="@drawable/button_primary"
                android:text="SELESAI"
                android:textColor="@color/whitePrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraint14" />

            <Button
                android:id="@+id/btn_beriUlasanOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimensatu"
                android:layout_marginStart="@dimen/dimensatu"
                android:layout_marginEnd="@dimen/dimensatu"
                android:text="BERI ULASAN"
                android:textColor="@color/whitePrimary"
                android:background="@drawable/button_secondary"
                android:layout_marginBottom="@dimen/dimendua"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraint14"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>